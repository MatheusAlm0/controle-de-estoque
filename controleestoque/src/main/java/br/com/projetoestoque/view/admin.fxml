<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.projetoestoque.controller.AdminController">
    
    <!-- Barra lateral com botões de navegação -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
            <Button text="Gerenciar Usuários" fx:id="btnUsuarios" onAction="#handleUsuarios" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Gerenciar Produtos" fx:id="btnProdutos" onAction="#handleProdutos" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            <Button text="Relatórios" fx:id="btnRelatorios" onAction="#handleRelatorios" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
        </VBox>
    </left>
    
    <!-- Área central onde os conteúdos serão carregados -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;" />
    </center>
    
</BorderPane>